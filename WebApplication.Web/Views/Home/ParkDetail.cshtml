@model Park
@{
    ViewData["Title"] = "ParkDetail";
}

<img src="~/images/parks/@(Model.ParkCode).jpg" />
<h2>@Model.ParkName</h2>
<h3>est. @Model.YearFounded</h3>
<div>
    <h3>@Model.Quote</h3>
    <h4>@Model.QuoteSource</h4>
    <p>@Model.ParkDescription</p>
    <p>@Model.State</p>
    <p>Entry Fee: @Model.EntryFee.ToString("C")</p>
    <p>Climate: @Model.Climate</p>
    <p>Acreage: @Model.Acreage</p>
    <p>Elevation: @Model.ElevationInFeet ft</p>
    <p>Miles of Trail: @Model.MilesOfTrail mi</p>
    <p>Number of Campsites: @Model.NumberOfCampsites</p>
    <p>Annual Number of Visitors: @Model.AnnualVisitorCount</p>
    <p>Number of Animal Species: @Model.AnimalSpecies</p>

    <div class="weather-link">
        <a asp-controller="Home" asp-action="Weather" asp-route-id="@Model.ParkCode">
            <h3>See Five day forecast</h3>
         </a>
    </div>
</div>

