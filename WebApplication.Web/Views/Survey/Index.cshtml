@model Survey
@{
    ViewData["Title"] = "Index";
}

<h2>Survey</h2>

<form method="post" asp-controller="Survey" asp-action="Index">
    <div>
        <label asp-for="ParkCode">Choose Favorite National Park</label>
        <select asp-for="ParkCode">
            <option value="CVNP">Cuyahoga Valley National Park</option>
            <option value="ENP">Everglades National Park</option>
            <option value="GCNP">Grand Canyon National Park</option>
            <option value="GSMNP">Great Smoky Mountains National Park</option>
            <option value="GTNP">Grand Teton National Park</option>
            <option value="MRNP">Mount Rainier National Park</option>
            <option value="RMNP">Rocky Mountain National Park</option>
            <option value="YNP">Yellowstone National Park</option>
            <option value="YNP2">Yosemite National Park</option>
        </select>
    </div>
    <div>
        <label asp-for="EmailAddress">Email Address</label>
        <input asp-for="EmailAddress" />
    </div>
    <div>
        <label asp-for="State">State of Residence</label>
        <input asp-for="State" />
    </div>
    <div>
        <label asp-for="ActivityLevel">Physical Activity Level</label>
        <select asp-for="ActivityLevel">
            <option value="Inactive">Inactive</option>
            <option value="Sedantary">Sedantary</option>
            <option value="Active">Active</option>
            <option value="Extremely Active">Extremely Active</option>
        </select>
    </div>
    <input type="submit" value="Submit" />
</form>